<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/screen_shot1"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            card_view:srcCompat="@drawable/img" />

        <TextView
            android:id="@+id/music_name1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_shot1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Helo World"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/music_author1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/music_name1"
            android:layout_alignStart="@+id/music_name1"
            android:layout_below="@+id/music_name1"
            android:gravity="center"
            android:text="Helo world"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>